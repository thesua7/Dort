<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="597dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        app:srcCompat="@drawable/maincard"
        tools:ignore="ImageContrastCheck,ImageContrastCheck" />

    <TextView
        android:id="@+id/r_interests"
        android:layout_width="417dp"
        android:layout_height="33dp"
        android:background="@drawable/rinterestbox"
        android:text="Worked On and Published research"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/currentlyworkingon"
        android:layout_width="417dp"
        android:layout_height="33dp"
        android:background="@drawable/rinterestbox"
        android:text="Currently Working on"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:layout_width="52dp"
        android:layout_height="27dp"
        android:id="@+id/name"
        android:text="Name:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/nsuid"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:text="NSU ID:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="172dp" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:text="SEX:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:text="Bio:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="224dp" />

    <TextView
        android:id="@+id/interestArea"
        android:layout_width="71dp"
        android:layout_height="38dp"
        android:text="Research Interest:"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="250dp" />

    <TextView
        android:id="@+id/r_des"
        android:layout_width="365dp"
        android:layout_height="200dp"
        android:background="@drawable/rtopicbox"
        android:text="@string/okokok"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/r_de"
        android:layout_width="368dp"
        android:layout_height="86dp"
        android:background="@drawable/rtopicbox"
        android:text="@string/okokok"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863"
        tools:ignore="TextContrastCheck,TextContrastCheck" />
    


    <Button
        android:id="@+id/button"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:background="@drawable/matchbox"
        android:text="@string/match"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/nt_match_btn"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:background="@drawable/matchbox"
        android:text="@string/not"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.624"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>