<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="597dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343"
        app:srcCompat="@drawable/maincard"
        tools:ignore="ImageContrastCheck,ImageContrastCheck" />

    <TextView
        android:id="@+id/r_interests"
        android:layout_width="417dp"
        android:layout_height="33dp"
        android:background="@drawable/rinterestbox"
        android:text="Worked On and Published research"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416"
        tools:ignore="HardcodedText,TextContrastCheck" />


    <TextView

        android:layout_width="417dp"
        android:layout_height="33dp"
        android:background="@drawable/rinterestbox"
        android:text="Currently Working on"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <TextView
        android:id="@+id/getGenInfo"
        android:layout_width="352dp"
        android:layout_height="161dp"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:text="Hello World"
        android:textSize="22dp"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/interestArea"
        android:layout_width="392dp"
        android:layout_height="243dp"
        android:paddingTop="170dp"
        android:textSize="22dp"
        android:paddingLeft="30dp"
        android:text="Research Interest:"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="3dp" />


    <TextView
        android:id="@+id/workedon"
        android:layout_width="392dp"
        android:layout_height="162dp"
        android:textSize="25dp"
        android:background="@drawable/rtopicbox"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/currentlyworkingon"
        android:layout_width="368dp"
        android:layout_height="86dp"
        android:background="@drawable/rtopicbox"
        android:text="@string/okokok"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/button"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:background="@drawable/matchbox"
        android:text="@string/match"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/nt_match_btn"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:background="@drawable/matchbox"
        android:text="Feed"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>